{
  "manifest_version": 2,
  "name": "TimeWise",
  "version": "1.0",
  "options_page": "options.html",
  "description": "Track time wasted on the web, to help you stay productive",
  "permissions": [
    "<all_urls>", "storage", "notifications", "tabs"
  ],
  "externally_connectable": {
    "matches": ["*://*.google.com/*"]
  },
  "background": {
    "scripts": [
      "scripts/define.js",
      "scripts/desknotif.js", 
      "scripts/database.js", 
      "scripts/main.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "./logo.png",
    "default_title": "Manage TimeWise",
    "default_popup": "./pop/index.html"
  },
  "icons": {
    "128": "./logo.png"
  }
}